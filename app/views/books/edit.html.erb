<%= link_to 'welcome', "/" %>
<%= link_to 'authors index', "/authors" %>
<%= link_to 'books index', "/books" %>

<%= form_tag("/books/#{@book.id}", method: :patch) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :publication_date %>
  <%= text_field_tag :publication_date %>
  <%= label_tag :pages %>
  <%= text_field_tag :pages%>
  <%= label_tag :currently_printed %>
  <%= text_field_tag :currently_printed %>

  <%= submit_tag 'Update Book' %>
<% end %>