<h1>Coffee Beans By <%= @roaster.name %></h1>
<h3><%= @roaster.coffee_count %> types of coffee beans</h3>
<% @roaster_sorted.each do |coffee_bean| %>
    <%= link_to "#{coffee_bean.name}", "/coffeebeans/#{coffee_bean.id}" %>
    <p>Created at: <%=  coffee_bean.created_at%></p></br></br>
<% end %>
<%= link_to "Create Beans", "/roasters/#{@roaster.id}/coffeebeans/new" %>